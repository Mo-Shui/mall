<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.moshui.mall.dao.AdminUserMapper">
    <resultMap id="BaseResultMap" type="com.moshui.mall.entity.AdminUser">
        <id property="adminUserId" column="admin_user_id"/>
        <result property="loginUserName" column="login_user_name"/>
        <result property="loginPassword" column="login_password"/>
        <result property="nickName" column="nick_name"/>
        <result property="locked" column="locked"/>
    </resultMap>

    <!--登录-->
    <select id="login" resultMap="BaseResultMap">
        select
               *
        from
             tb_newbee_mall_admin_user
        where
            login_user_name = #{username} and login_password = #{password} and locked = 0
    </select>

    <!--根据用户id获取用户信息-->
    <select id="getUserDetailById" resultMap="BaseResultMap" parameterType="int">
        select * from tb_newbee_mall_admin_user where admin_user_id = #{value}
    </select>

    <!--修改用户信息-->
    <update id="updateUserDetailByAdminUser" parameterType="com.moshui.mall.entity.AdminUser">
        update tb_newbee_mall_admin_user
        <set>
            <if test="loginUserName != null">
                login_user_name = #{loginUserName},
            </if>
            <if test="loginPassword != null">
                login_password = #{loginPassword},
            </if>
            <if test="nickName != null">
                nick_name = #{nickName},
            </if>
            <if test="locked != null">
                locked = #{locked},
            </if>
        </set>
        where admin_user_id = #{adminUserId}
    </update>
</mapper>